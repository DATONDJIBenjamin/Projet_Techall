 {% extends 'Template.html.twig' %}

{% block title %}
    Users
{% endblock %}

{% block PageTitle %}
    Users
{% endblock %}

    {% block body %}

    {{ include('Fragments/date_jour.html.twig') }}
    <hr>
    <a  href="{{ path('app_tab', {nb: 7})}}">Mes notes</a>
    <hr>
        <table class="table-active">
        <tr>
                <td>Firstname</td>
                <td>Name</td>
                <td>Age</td>
                <td>Message</td>
        </tr>
{% for user in users %}
    
      <tr class="table-{% if loop.index is even %}danger {% else %} warning {% endif %}">
                <td>{{ user.firstname}}</td>
                <td> {{ user.name}}</td>
                <td> {{ user.age}}</td>
                 <td> 
                 {{ render(controller('App\\Controller\\FirstController::SayHello1',{firstname: user.firstname, name: user.name})) }}
                 </td>
    </tr>
{% endfor %}
        
    </table>



    {% endblock %}
    
    